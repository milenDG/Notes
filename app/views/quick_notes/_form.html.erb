<%= form_with(model: quick_note, local: true) do |form| %>
  <% if quick_note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quick_note.errors.count, "error") %> prohibited this quick_note from being saved:</h2>

      <ul>
      <% quick_note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, :class => 'form-control', :maxlength => 255 %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %> <small>(optional)</small>
    <%= form.text_field :subtitle, autofocus: true, :class => 'form-control', :maxlength => 255 %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, autofocus: true, :class => 'form-control', :rows => 7 %>
  </div>

  <div class="form-group">
    <%= form.submit "#{action} QuickNote", :class => 'btn btn-primary', :role => "button" %>
  </div>
<% end %>
