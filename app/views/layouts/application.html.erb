<!DOCTYPE html>
<html>
  <head>
    <title>Notes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="navbar navbar-expand-lg navbar-dark">
      <a href="/">
        <img src="/images/logo.png" class="float-left mr-0 mr-md-2 clickable-img" alt="logo" height="40" width="40">
      </a>
      <a class="navbar-brand font-weight-bold" href="/">Notes</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a id="about-nav" class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a id="experience-nav" class="nav-link" href="/Collections/Index">Collections</a>
          </li>
          <li class="nav-item">
            <a id="education-nav" class="nav-link" href="/Notes/Index">Notes</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><strong><%= current_user.email %></strong></a>
              <div id="projects-dropdown-menu"class="dropdown-menu" style="margin-top: 0px;">
                <%= link_to 'Edit profile', edit_user_registration_path, :class => 'dropdown-item' %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'dropdown-item' %>
              </div>
            </li>
          <% else %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><strong>Not Signed</strong></a>
              <div id="projects-dropdown-menu"class="dropdown-menu" style="margin-top: 0px;">
                <%= link_to "Sign up", new_user_registration_path, :class => 'dropdown-item' %>
                <%= link_to "Login", new_user_session_path, :class => 'dropdown-item' %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>


    <div id="main-content" class="container col-11 rounded-img">
      <div class="row">
        <div id="text-content-holder" class="col-xl-9 col-lg-8 col-md-7 left-rounded-img">
          <%= yield %>
        </div>
        <div class="col-xl-3 col-lg-4 col-md-5 text-center" style="padding-top: 15px; padding-bottom: 20px">

        </div>
