<h1>Create Collection</h1>
<%= form_for Collection.new, method: 'post' do |f|%>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, :class => 'form-control', :maxlength => 255 %>
  </div>

  <div class="form-group">
    <%= f.label :subtitle %> <small>(optional)</small>
    <%= f.text_field :subtitle, autofocus: true, :class => 'form-control', :maxlength => 255 %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, autofocus: true, :class => 'form-control' %>
  </div>

  <br/>

  <div class="actions">
    <%= f.submit "Create collection", :class => 'btn btn-primary'%>
  </div>
<% end %>
