<%= form_with(model: notebook, local: true) do |form| %>
  <% if notebook.errors.any? %>
    <div id="error_explanation" class="container">
      <h2><%= pluralize(notebook.errors.count, "error") %> prohibited this notebook from being saved:</h2>

      <ul>
      <% notebook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, :class => 'form-control', :maxlength => 255 %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %> <small>(optional)</small>
    <%= form.text_field :subtitle, autofocus: true, :class => 'form-control', :maxlength => 255 %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, autofocus: true, :class => 'form-control', :rows => 5 %>
  </div>

  <br/>

  <div class="form-group">
    <%= form.submit "#{action} notebook", :class => 'btn btn-primary', :role => "button" %>
  </div>
<% end %>
